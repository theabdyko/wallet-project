# =============================================================================
# Django Application Settings
# =============================================================================

# Django Core Settings
SECRET_KEY=django-insecure-change-me-in-production-use-strong-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# Individual database settings
DB_NAME=wallet_db
DB_USER=wallet_user
DB_PASSWORD=wallet_password
DB_HOST=localhost
DB_PORT=5432

# Alternative: Use DATABASE_URL for more complex configurations
# DATABASE_URL=postgresql://wallet_user:wallet_password@localhost:5432/wallet_db

# =============================================================================
# PostgreSQL Database Settings (for Docker)
# =============================================================================

# PostgreSQL service settings
POSTGRES_DB=wallet_db
POSTGRES_USER=wallet_user
POSTGRES_PASSWORD=wallet_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# Application Configuration
# =============================================================================

# API Settings
API_VERSION=v1
API_TITLE=Wallet API
API_DESCRIPTION=A Django project designed with Domain Driven Design (DDD) and SOLID principles for Wallet and Transaction management

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=verbose

# =============================================================================
# Security Settings (Production)
# =============================================================================

# HTTPS Settings (set to True in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Security Headers
SECURE_BROWSER_XSS_FILTER=False
SECURE_CONTENT_TYPE_NOSNIFF=False
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# =============================================================================
# Development Settings
# =============================================================================

# Development Database (SQLite fallback)
USE_SQLITE_FALLBACK=True
DEV_DB_ENGINE=django.db.backends.sqlite3
DEV_DB_NAME=db.sqlite3

# Development Logging
DEV_LOG_LEVEL=DEBUG
DEV_LOG_DB_LEVEL=DEBUG

# =============================================================================
# Docker Settings
# =============================================================================

# Docker Compose
DOCKER_COMPOSE_PROJECT_NAME=wallet_project
DOCKER_WEB_PORT=8000
DOCKER_DB_PORT=5432

# =============================================================================
# Optional: External Services
# =============================================================================

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379/0

